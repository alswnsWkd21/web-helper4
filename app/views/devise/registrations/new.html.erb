<div id="signup-page">
  <div class="signup">
    <div class="signup-form">
  
  <div class="signup-title">
<h1>회원가입</h1>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
  
</div>

  <div class="field">
    <%= f.label :"이메일", :class => "email"%><br />
    <%= f.email_field :email, :class => "email-box", autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :"비밀번호", :class => "password" %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> 자 이상)</em>
    <% end %><br />
    <%= f.password_field :password, :class => "password-box", autocomplete: "off" %>
  </div>

  <div class="field">
    <%= f.label :"비밀번호 확인", :class => "password-confirmation" %><br />
    <%= f.password_field :password_confirmation, :class => "password-confirmation-box",autocomplete: "off" %>
  </div>

  <div class="actions">
    <%= f.submit "가입 하기", :class => "signup-button"%>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>
</div>
</div>

<script type="text/javascript">
  var height = window.innerHeight || document.documentElement.clientHeight || document.body.clientHeight;
  var width = window.innerWidth || document.documentElement.colentWidth || document.body.clientWidth;
  
  var elm = document.getElementById("signup-page");
  elm.style.height = height + "px";
  
</script>