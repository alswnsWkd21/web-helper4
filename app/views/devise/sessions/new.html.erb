<div id="login-page">
  
<div class="login">

  
  <div class="login-title">
<h1>Paper</h1>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
</div>

  <div class="field">
    <%= f.label :이메일, :class => "email" %><br />
    <%= f.email_field :email, :class => "email-box", autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :비밀번호, :class => "password" %><br />
    <%= f.password_field :password, :class => "password-box",autocomplete: "off" %>
  </div>
  

  <% if devise_mapping.rememberable? -%>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :"아이디 기억", :class => "login-remember" %>
    </div>
  <% end -%>

  <div class="actions">
    <%= f.submit "로그인", :class => "login-button" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>


</div>
</div>



<script type="text/javascript">
  var height = window.innerHeight || document.documentElement.clientHeight || document.body.clientHeight;
  var width = window.innerWidth || document.documentElement.colentWidth || document.body.clientWidth;
  
  var elm = document.getElementById("login-page");
  elm.style.height = height + "px";
  
</script>
