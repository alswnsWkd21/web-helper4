<p id="notice"><%= notice %></p>

<h1>Listing Projects</h1>

<table>
  <thead>
    <tr>
      <th>Pname</th>
      <th>Supportperiod</th>
      <th>Deadline</th>
      <th>Limitmoney</th>
      <th>Planstate</th>
      <th>Pcontent</th>
      <th>Ptag</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @projects.each do |project| %>
      <tr>
        <td><%= project.pname %></td>
        <td><%= project.supportperiod %></td>
        <td><%= project.deadline %></td>
        <td><%= project.limitmoney %></td>
        <td><%= project.planstate %></td>
        <td><%= project.pcontent %></td>
        <td><%= project.ptag %></td>
        <td><%= link_to 'Show', project %></td>
        <td><%= link_to 'Edit', edit_project_path(project) %></td>
        <td><%= link_to 'Destroy', project, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

